{
  "name": "bitcoin-litecoin-to-ethereum-mapping-collector",
  "version": "2.0.0",
  "description": "We collect bitcoin/litecoin addresses, ethereum (BBK payout) addresses and signatures, verifying the user truly is the owner of said bitcoin/litecoin address",
  "main": "src/index.js",
  "author": "Martin Josefsson <martin.josefsson@brickblock.io>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn flow && yarn migrate && NODE_ENV=production flow-node ./src/index.js",
    "migrate": "./scripts/shmig -H $MYSQL_HOST -d $MYSQL_DATABASE -t mysql -l $MYSQL_USERNAME -p $MYSQL_PASSWORD up",
    "test": "yarn run flow && flow-node tests/index_test.js"
  },
  "dependencies": {
    "bitcoinjs-message": "^2.0.0",
    "bitcore-message": "^1.0.4",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "crypto-address-checker": "^3.0.0",
    "db-migrator": "^2.2.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "flow": "^0.2.3",
    "flow-bin": "^0.61.0",
    "flow-remove-types": "^1.2.3",
    "mysql": "^2.15.0",
    "nodemon": "^1.12.1",
    "promise-mysql": "^3.1.3",
    "ramda": "^0.25.0",
    "squel": "^5.12.0",
    "tap-dot": "^1.0.5",
    "tape": "^4.8.0"
  },
  "devDependencies": {
    "prettier": "^1.8.2"
  }
}
