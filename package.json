{
  "name": "bitcoin-litecoin-to-ethereum-mapping-collector",
  "version": "1.1.0",
  "description": "We collect bitcoin/litecoin addresses, ethereum (bbt payout) addresses and signatures, verifying the user truly is the owner of said bitcoin/litecoin address",
  "main": "src/index.js",
  "author": "Martin Josefsson <martin.josefsson@brickblock.io>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn migrate && NODE_ENV=production node ./src/index.js",
    "start-watch": "yarn migrate && NODE_ENV=development nodemon ./src/index.js",
    "migrate": "./scripts/shmig -H $MYSQL_HOST -d $MYSQL_DATABASE -t mysql -l $MYSQL_USERNAME -p $MYSQL_PASSWORD up",
    "test": "tape tests/*.js | tap-dot"
  },
  "dependencies": {
    "bitcore-message": "^1.0.4",
    "body-parser": "^1.18.2",
    "db-migrator": "^2.2.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "mysql": "^2.15.0",
    "nodemon": "^1.12.1",
    "promise-mysql": "^3.1.3",
    "ramda": "^0.25.0",
    "squel": "^5.12.0",
    "tap-dot": "^1.0.5",
    "tape": "^4.8.0"
  },
  "devDependencies": {
    "prettier": "^1.8.2"
  }
}
